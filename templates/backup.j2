{% from 'macros.j2' import data_table %}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>DYELBro - Exercises</title>
  <link rel="stylesheet" href=".\static\css\style.css" type="text/css">
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      text-align: center;
      margin: auto;
    }

    h1 {
      margin: auto;
      text-align: center;
      padding-top: 50px;
    }

    .page-description {
      max-width: 80%;
      text-align: center;
      margin: auto;
      margin-top: 15px;
      margin-bottom: 15px;
    }

    ul {
      margin: auto;
    }

    .ul-title {
      font-weight: bold;
      padding-bottom: 15px;
    }

    .form-inline:not(.exercise-name-div) {
      display: flex;
      flex-flow: row wrap;
      align-items: center;
    }

    .form-inline label {
      margin: auto
    }

    .form-inline input {
      vertical-align: middle;
      margin: 5px 10px 5px 0;
      padding: 10px;
      background-color: #fff;
      border: 1px solid #ddd;
    }

    .exercise-name:focus {
      background-color: lightblue;
      transition: all 0.4s ease-in-out;
    }

    .search-bar[type=text]:focus {
      width: 86%;
      transition: all 0.4s ease-in-out;
      background-color: lightblue;
    }

    .form-inline button {
      padding: 10px 20px;
      background-color: dodgerblue;
      border: 1px solid #ddd;
    }

    .form-inline button:hover {
      background-color: royalblue;
    }

    .form-inline {
      flex-direction: row;
      align-items: stretch;
    }

    form {
      border: 1px solid black;
      text-align: center;
      width: fit-content;
      margin: auto;
      padding: 20px;
    }

    .submit-button {
      height: 25%;
      margin: auto;
    }
  </style>
</head>

<body>
  <!-- Link below to home page-->
  <a href="/">
    <img style="width: 40%; padding-bottom: 20px;" class="title" src="./static/img/title.png" type="image/png">
  </a>

  <!-- Link below to lists and add exercise page-->
  <div class="horizontal-menu" id="link-bar">
    <a href="/exercises">Exercises</a>
    <a href="/training_types">Training Types</a>
    <a href="/movement_types">Movement Types</a>
    <a href="/muscle_groups">Muscle Groups</a>
  </div>

  <h1>Add Your Exercise Below</h1>
  <div class="form">
    <form id="add_ex" action="/exercises" method ="POST" class="form-inline">
      <div class="exercise-name-div" style="margin: auto;">
        <label for="exercise_name" style="font-weight: bold;">Please enter the name of the
          exercise:</label><br>
        <input class="exercise-name" type="text" name="exercise_name" placeholder="Enter exercise name here...">
      </div>
      <ul style="list-style-type: none;">
        <div class="ul-title">Please select relevant Training Types:</div>
        <div style="font-size: 12px; font-weight: bold;">
          Hold control and click for multiple selections...
        </div>
        <select multiple name="training" id="training">
          <option value="choose">Choose</option>
          <option value="squat">Cardiovascular</option>
          <option value="hinge">Muscular Endurance</option>
          <option value="pull">Strength</option>
          <option value="push">Stability</option>
          <option value="core">Metabolic Conditioning</option>
        </select>
      </ul>

      <ul style="list-style-type: none;">
        <div class="ul-title">Please select relevant Movement Types:</div>
        <div style="font-size: 12px; font-weight: bold;">
          Hold control and click for multiple selections...
        </div>
        <select multiple name="movement" id="movement">
          <option value="choose">Choose</option>
          <option value="squat">Squat</option>
          <option value="hinge">Hinge</option>
          <option value="pull">Pull</option>
          <option value="push">Push</option>
          <option value="core">Isolation</option>
        </select>
      </ul>

      <ul style="list-style-type: none;">
        <div class="ul-title">Please select relevant Muscle Groups:</div>
        <div style="font-size: 12px; font-weight: bold;">
          Hold control and click for multiple selections...
        </div>
        <select multiple name="muscle_groups" id="muscle_groups">
          <option value="choose">Shoose</option>
          <option value="hams">Chest</option>
          <option value="abs">Arms</option>
          <option value="quads">Back</option>
          <option value="hams">Shoulders</option>
          <option value="abs">Hips</option>
          <option value="quads">Legs</option>
          <option value="quads">Core</option>
        </select>
      </ul>
      <div class="submit-button">
        <input style="font-weight: bold; background-color:red;" type="submit" value="Submit Exercise" />
      </div>


    </form>
  </div>

  <p class="page-description" style="font-weight: bold; font-size: large;">Below you can find all the created saved
    exercises. You can search for a specific one by typing its name in the search bar.
  </p>
  <table style="width:75%">
    <tr>
      <th colspan="6" style="text-align: left;">
        <label for="search-bar">Search exercises by name:</label>
        <input class="search-bar" name="search-bar" type="text" placeholder="Enter exercise name here...">
      </th>
    </tr>
    <tr>
      {% for header in headings %}
      <th style="width: 100px;">{{ header }}</th>
      {% endfor %}
      <th style="width: 150px;">
      Modify
      </th>
    </tr>
    {% for row in data %}
    <tr>
      {% for cell in row %}
      <td>{{ cell }}</td>
      {% endfor %}
      <td>
        <button>Update</button> <button>Delete</button>
      </td>
    </tr>
    {% endfor %}
  </table>
</body>

</html>