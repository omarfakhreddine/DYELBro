    ul {
      margin: auto;
    }

    .ul-title {
      font-weight: bold;
      padding-bottom: 15px;
    }

    .form-inline:not(.exercise-name-div) {
      display: flex;
      flex-flow: row wrap;
      align-items: center;
    }

    .form-inline label {
      margin: auto
    }

    .form-inline input {
      vertical-align: middle;
      margin: 5px 10px 5px 0;
      padding: 10px;
      background-color: #fff;
      border: 1px solid #ddd;
    }

    .exercise-name:focus {
      background-color: lightblue;
      transition: all 0.4s ease-in-out;
    }

    .search-bar[type=text]:focus {
      width: 86%;
      transition: all 0.4s ease-in-out;
      background-color: lightblue;
    }

    .form-inline button {
      padding: 10px 20px;
      background-color: dodgerblue;
      border: 1px solid #ddd;
    }

    .form-inline button:hover {
      background-color: royalblue;
    }

    .form-inline {
      flex-direction: row;
      align-items: stretch;
    }

    form {
      border: 1px solid black;
      text-align: center;
      width: fit-content;
      margin: auto;
      padding: 20px;
    }

    .submit-button {
      height: 25%;
      margin: auto;
    }
